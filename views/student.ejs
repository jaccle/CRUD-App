<% layout('layout') -%>


<div class="col-xs-2"></div>
<div class="col-xs-8">
	<div class="panel panel-info">
	  <div class="panel-heading">
	    <h3 class="panel-title"><%= student.lastName %>, <%= student.firstName %></h3>
	  </div>
	  <div class="panel-body">
	    <dl>
		  <dt>Nick Name</dt>
		  <dd><%= student.nickName %></dd>

		  <dt>Gender</dt>
		  <dd><%= student.gender %></dd>

		  <dt>Age</dt>
		  <dd><%= student.age %></dd>

		  <dt>Birthdate</dt>
		  <dd><%= student.birthday %></dd>

		  <dt>Number</dt>
		  <dd><%= student.number %></dd>

		  <dt>Allergies</dt>
		  <dd><%= student.allergies %></dd>

		  <dt>Other</dt>
		  <dd><%= student.other %></dd>
		</dl>
	  </div>

	  <a href="/student/edit/<%= student.id %>"><button  style="margin: 2%" type="button" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-edit"></span> Update Student Information</button></a>
	</div>
</div>
<div class="col-xs-2"></div>