    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

<!-- Highlight Input Text With Focus -->
    <script>
    function highlight () {
        $("input[type='text']").on("click", function () {
           $(this).select();
        });
    }
    </script>

