            <!-- Default panel contents -->
            <div class="panel-heading"><span class="glyphicon glyphicon-user" aria-hidden="true"> Attendance</div>
            <form action="/class?_method=put" method="POST" class="form-inline" style="margin: 2%;">
            <div class="form-group">
                <table class="table table-hover table-striped sortable">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Attendance</th>
                        </tr>
                    </thead>

                    <% students.forEach(function (student) { %>
	                    <% if (student.nickName !== '') { %>
		                    <tr>
		                        <td><%= student.nickName %></td>
		                        <td><%= student.lastName %></td>
		                        <td><label>Here:</label><input type="radio" name="" value="-" checked>
		                        <br>
		                        <label>Absent:</label><input type="radio" name="" value="A">
		                        <br>
		                        <label>Tardy:</label><input type="radio" name="" value="T"></td>
	                        </tr>
	                    <% } else { %>
							<tr>
		                        <td value="" name=""><%= student.firstName %></td>
		                        <td><%= student.lastName %></td>
		                        <td><label>Here:</label><input type="radio" name="" value="-" checked>
		                        <br>
		                        <label>Absent:</label><input type="radio" name="" value="A">
		                        <br>
		                        <label>Tardy:</label><input type="radio" name="" value="T"></td>
	                        </tr>
	                    <% } %>
                    <% }) %>
                </table>
    		<!-- will need new schema to keep all this info, $set -->
                <input type="hidden" id="inputDate" name="">
                <button type="submit" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-apple" aria-hidden="true"> Update Teacher</button>
            </form>
            </div>
                
            <label class="control-label" for="teacher">
                <h6>Update Class's Homeroom Teacher:</h6></label>
            <input type="text" class="form-control input-sm" id="teacher" name="student[teacher]">
        </div>
